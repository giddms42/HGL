<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="customer">
	<resultMap type="com.hk.mvc03.dto.CustomerDto" id="customerDtoMap">
		<result column="ID" property="id"/>
		<result column="PASSWORD" property="password"/>
		<result column="NAME" property="name"/>
	</resultMap>

	<select id="selectAll" resultMap="customerDtoMap">
		SELECT * FROM TB_CUSTOMER
	</select>

	<select id="selectOne" resultType="CustomerDto" parameterType="String">
		SELECT * FROM TB_CUSTOMER WHERE ID=#{id}
	</select>
	
	<update id="update" parameterType="customerDto">
		UPDATE TB_CUSTOMER SET PASSWORD=#{password}, NAME=#{name} WHERE ID=#{id} 
	</update>
	
	<delete id="delete" parameterType="String">
		DELETE FROM TB_CUSTOMER WHERE ID=#{id}
	</delete>
	
	<insert id="insert" parameterType="customerDto">
		INSERT INTO TB_CUSTOMER VALUES(#{id}, #{password}, #{name})
	</insert>
	
	<select id="logincheck" parameterType="map" resultMap="customerDtoMap">
		SELECT * FROM TB_CUSTOMER WHERE ID=#{id} AND PASSWORD = #{password}
	</select>
</mapper>
